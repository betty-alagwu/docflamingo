{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "warn",
    "no-alert": "error",
    "prefer-const": "error",
    "spaced-comment": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "prettier/prettier": ["error", {}, { "usePrettierrc": true }]
  }
}
